<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gvp.it.doit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/gvplogo"
        android:label="doit"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">

        <activity android:name=".About"/>
        <activity android:name=".Notifications"/>
        <activity android:name=".Academics"/>
        <activity android:name=".Web"/>
        <activity android:name=".Faculty"/>
        <activity android:name=".Info"/>
        <activity android:name=".Login"/>
        <activity android:name=".adminlogin"/>
        <activity android:name=".teacherlogin"/>
        <activity android:name=".studentlogin"/>
        <activity android:name=".addteacher"/>
        <activity android:name=".addstudent"/>
        <activity android:name=".takeAttendance"/>
        <activity android:name=".admin_attendanceSheet"/>
        <activity android:name=".teacher_attendanceSheet"/>
        <activity android:name=".student_attendance_sheet"/>

        <activity android:name=".MainActivity"/>

        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>